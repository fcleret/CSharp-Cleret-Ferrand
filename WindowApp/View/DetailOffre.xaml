<UserControl x:Class="WindowApp.View.DetailOffre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label>Id de l'offre</Label>
        <TextBox Text="{Binding Id}"></TextBox>
        
        <Label>Date de l'offre</Label>
        <TextBox Text="{Binding Date}"></TextBox>

        <Label>Description de l'offre</Label>
        <TextBox Text="{Binding Description}"></TextBox>
        
        <Label>Intitulé de l'offre</Label>
        <TextBox Text="{Binding Intitule}"></TextBox>

        <Label>Responsable de l'offre</Label>
        <TextBox Text="{Binding Responsable}"></TextBox>

        <Label>Salaire de l'offre</Label>
        <TextBox Text="{Binding Salaire}"></TextBox>

    </StackPanel>
</UserControl>
